FROM rust:latest

# install system dependencies

RUN dpkg --add-architecture arm64 && \
    apt-get update && \
    apt-get install -y gcc-aarch64-linux-gnu pkg-config \
    && rm -rf /var/lib/apt/lists/*

# add aarch64 target

RUN rustup target add aarch64-unknown-linux-gnu

# set environment variables for cross compilation

ENV PKG_CONFIG_PATH=/usr/lib/aarch64-linux-gnu/pkgconfig
ENV PKG_CONFIG_LIBDIR=/usr/lib/aarch64-linux-gnu/pkgconfig
ENV PKG_CONFIG_SYSROOT_DIR=/

# cache dependencies

COPY Cargo.toml Cargo.toml
RUN mkdir src
RUN touch src/main.rs
RUN echo "fn main() { println!(\"Hello, world! v2\"); }" > src/main.rs
RUN cargo build --release --target=aarch64-unknown-linux-gnu
RUN rm src/main.rs

# copy source code

COPY src ./src

# build with cache busting - remove target to force recompilation
RUN rm -rf target/aarch64-unknown-linux-gnu/release/deps/oled* target/aarch64-unknown-linux-gnu/release/oled*

RUN cargo build --release --target=aarch64-unknown-linux-gnu

# prepare output

RUN mkdir -p /output
RUN cp target/aarch64-unknown-linux-gnu/release/oled ./oled

# on run, copy the built binary to output directory

CMD ["cp", "oled", "/output/oled"]
